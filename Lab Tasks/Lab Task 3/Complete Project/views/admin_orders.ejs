<div class="admin-main">
  <div class="admin-header">
    <h1>Orders </h1>
  </div>
  <table class="admin-table">
    <thead>
      <tr>
        <th>Subject</th>
        <th>Sender</th>
        <th>Date</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
      <% if (orders.length === 0) { %>
        <tr><td colspan="4">No orders found.</td></tr>
      <% } %>
      <% orders.forEach(function(msg) { %>
        <tr>
          <td><%= msg.subject %></td>
          <td><%= msg.userEmail %></td>
          <td><%= msg.createdAt.toLocaleString() %></td>
          <td>
            <div class="admin-message-details">
              <% msg.body.split(/\n|; /).forEach(function(line) { %>
                <% if (line.includes(':')) { %>
                  <span class="admin-message-key"><%= line.split(':')[0] %>:</span>
                  <%= line.split(':').slice(1).join(':').trim() %><br>
                <% } else { %>
                  <%= line %><br>
                <% } %>
              <% }) %>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div> 