<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/admin_panel.css" />
  <link rel="stylesheet" href="/css/login.css" />
  <link rel="stylesheet" href="/css/signup.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <% if (typeof stylesheets !== 'undefined' && stylesheets) { %>
    <% stylesheets.forEach(function(sheet) { %>
      <link rel="stylesheet" href="<%= sheet %>" />
    <% }) %>
  <% } %>
</head>
<body>
  <div class="admin-panel-layout">
    <aside class="sidebar">
      <div class="logo"><img src="/resources/logo.png" alt="Logo" style="height:32px;"></div>
      <div class="logo">Admin Panel</div>
      <ul class="sidebar-nav">
        <li class="<%= (request.path === '/admin/panel') ? 'active' : '' %>"><a href="/admin/panel" class="sidebar-link"><i class="ri-archive-2-fill"></i> Products</a></li>
        <li class="<%= (request.path.startsWith('/admin/messages/complaints')) ? 'active' : '' %>"><a href="/admin/messages/complaints" class="sidebar-link"><i class="ri-mail-line"></i> Complaints</a></li>
        <li class="<%= (request.path.startsWith('/admin/messages/orders')) ? 'active' : '' %>"><a href="/admin/messages/orders" class="sidebar-link"><i class="ri-shopping-bag-3-line"></i> Orders</a></li>
        <li><i class="ri-bar-chart-2-line"></i> Analytics</li>
        <li><i class="ri-settings-3-line"></i> Settings</li>
        <li><a href="/admin/logout" class="sidebar-link"><i class="ri-logout-box-r-line"></i> Logout</a></li>
      </ul>
    </aside>
    <main class="admin-main">
      <%- body %>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <% if (typeof scripts !== 'undefined' && scripts) { %>
    <% scripts.forEach(function(script) { %>
      <script src="<%= script %>"></script>
    <% }) %>
  <% } %>
</body>
</html> 