<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Signup Page</title>
        <link rel="stylesheet" href="/css/signup.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>
        <div class="admin-container">
        <div class="box">
            <div class="login">
                <div class="loginBx">
                    <h2>
                        <i class="fa-solid fa-user-plus"></i>
                            User Sign Up
                    </h2>
                        <form class="inputBx" action="/user/signup" method="POST">
                            <% if (typeof message !== 'undefined' && message) { %>
                            <div class="error-msg"><%= message %></div>
                            <% } %>
                            <input name="name" type="text" placeholder="Enter Full Name" required autocomplete="name">
                            <input name="email" type="email" placeholder="Enter Email" required autocomplete="email">
                            <input name="password" type="password" placeholder="Enter Password" required autocomplete="new-password" pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$" title="Password must be at least 8 characters and include both letters and numbers.">
                        <input type="submit" value="Sign Up">
                    </form>
                    <div class="group">
                            <a href="/user/login">Already have a user account?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
