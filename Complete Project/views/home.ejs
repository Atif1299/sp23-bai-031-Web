<div id="itemslist">
    <div id="fixeditem">
        <img src="resources/files/SOCIAL_5_8_CoD_1296x.jpg" alt="Leora Wrap Dress">
    </div>
    <% if (products && products.length) { %>
      <% products.forEach(function(product) { %>
        <div class="item">
            <div class="item-image">
                <img class="default-image" src="<%= product.image %>" alt="<%= product.name %>">
                <% if (product.hoverImage) { %>
                  <img class="hover-image" src="<%= product.hoverImage %>" alt="<%= product.name %>">
                <% } %>
                <form method="POST" action="/user/cart/add/<%= product._id %>" style="display:inline;">
                  <button type="submit" class="quick-add">Add to Cart</button>
                </form>
            </div>
            <div class="description">
                <a href="#"><%= product.name %></a>
                <br>
                <%= product.price %> INR
            </div>
        </div>
      <% }) %>
    <% } %>
</div>
