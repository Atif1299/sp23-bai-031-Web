    <body>
        <div class="parent">
            <div class="div1">
                <div class="checkout-container">
                    <main class="checkout-main">
                        <div class="checkout-form-section">
                            <div class="express-checkout">
                                <h2>Express checkout</h2>
                                <div class="express-buttons">
                                    <button class="btn btn-shop-pay">shop pay</button>
                                    <button class="btn btn-paypal-express">PayPal</button>
                                    <button class="btn btn-gpay">G Pay</button>
                                </div>
                                <div class="separator">
                                    <span>OR</span>
                                </div>
                            </div>
                            <form id="checkout-form" novalidate>
                                <section class="form-section">
                                    <h2>Contact</h2>
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input
                                            type="email"
                                            id="email"
                                            name="email"
                                            required
                                        >
                                        <span class="error-message" id="error-email"></span>
                                    </div>
                                    <div class="form-group checkbox-group">
                                        <input type="checkbox" id="newsletter" name="newsletter">
                                        <label for="newsletter">
                                            Email me with news and offers
                                        </label
                                    >
                                    </div>
                                </section>
                                <section class="form-section">
                                    <h2>Delivery Address</h2>
                                    <div class="form-group">
                                        <label for="country">Country / Region</label>
                                        <select id="country" name="country">
                                            <option value="NL" selected>Netherlands</option>
                                            <option value="UK">United Kingdom</option>
                                            <option value="DE">Germany</option>
                                            <option value="US">United States</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="full-name">Full Name</label>
                                        <input
                                            type="text"
                                            id="full-name"
                                            name="full_name"
                                            required
                                            pattern="[A-Za-z\s]+"
                                            title="Please enter letters and spaces only."
                                        >
                                        <span class="error-message" id="error-full-name"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input
                                            type="text"
                                            id="address"
                                            name="address"
                                            required
                                        >
                                        <span class="error-message" id="error-address"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="apartment">
                                            Apartment, suite, etc. (optional)
                                        </label
                                    >
                                        <input type="text" id="apartment" name="apartment">
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group">
                                            <label for="postal-code">Postal code</label>
                                            <input type="text" id="postal-code" name="postal_code">
                                        </div>
                                        <div class="form-group">
                                            <label for="city">City</label>
                                            <input type="text" id="city" name="city">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone">Phone</label>
                                        <input
                                            type="tel"
                                            id="phone"
                                            name="phone"
                                            required
                                            pattern="\d+"
                                            minlength="10"
                                            maxlength="15"
                                            title="Please enter 10 to 15 digits."
                                        >
                                        <span class="error-message" id="error-phone"></span>
                                    </div>
                                </section>
                                <section class="form-section">
                                    <h2>Payment</h2>
                                    <p class="secure-text">
                                        All transactions are secure and encrypted.
                                    </p>
                                    <div class="payment-options">
                                        <div class="payment-option">
                                            <input
                                                type="radio"
                                                id="credit-card"
                                                name="payment_method"
                                                value="cc"
                                            >
                                            <label for="credit-card" id="payment2">
                                                <span class="text">Credit Card</span>
                                                <span class="logos">
                                                    <img src="/resources/Images/visalogo.png" alt="Visa">
                                                    <img src="/resources/Images/mastercardlogo.png" alt="MasterCard">
                                                    <img src="/resources/Images/unionlogo.png" alt="UnionPay">
                                                    <img src="/resources/Images/visalogo.png" alt="Visa">
                                                </span>
                                            </label>
                                        </div>
                                        <!-- Credit Card Details (Now inside #cc-details) -->
                                        <div id="cc-details" style="
                                display: none;
                                border: 1px solid #eee;
                                padding: 15px;
                                margin-top: 10px;
                              ">
                                            <div class="form-group">
                                                <label for="cc-number">Card Number</label>
                                                <input
                                                    type="text"
                                                    id="cc-number"
                                                    name="cc_number"
                                                    pattern="\d{16}"
                                                    maxlength="16}"
                                                    title="Enter 16 digits without spaces or dashes."
                                                >
                                                <span class="error-message" id="error-cc-number"></span>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group">
                                                    <label for="cc-expiry">Expiry Date (MM/YY)</label>
                                                    <input
                                                        type="text"
                                                        id="cc-expiry"
                                                        name="cc_expiry"
                                                        placeholder="MM/YY"
                                                        pattern="\d{2}/\d{2}"
                                                        title="Enter date in MM/YY format."
                                                    >
                                                    <span class="error-message" id="error-cc-expiry"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="cc-cvv">CVV</label>
                                                    <input
                                                        type="text"
                                                        id="cc-cvv"
                                                        name="cc_cvv"
                                                        pattern="\d{3}"
                                                        maxlength="3"
                                                        title="Enter the 3-digit CVV."
                                                    >
                                                    <span class="error-message" id="error-cc-cvv"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- PayPal Option (Outside #cc-details) -->
                                        <div class="payment-option">
                                            <input
                                                type="radio"
                                                id="paypal"
                                                name="payment_method"
                                                value="paypal"
                                            >
                                            <label for="paypal" id="payment2">
                                                <span class="text">Cash on Delivery</span>
                                                <span class="logos" style="font-size: 2rem; margin-left: 10px;">💵</span>
                                            </label>
                                        </div>
                                    </div>
                                </section>
                                <section class="form-section">
                                    <h2>Billing address</h2>
                                    <div class="billing-options">
                                        <div class="radio-group">
                                            <input
                                                type="radio"
                                                id="billing-same"
                                                name="billing_address"
                                                value="same"
                                                checked
                                            >
                                            <label for="billing-same">Same as shipping address</label>
                                        </div>
                                        <div class="radio-group">
                                            <input
                                                type="radio"
                                                id="billing-different"
                                                name="billing_address"
                                                value="different"
                                            >
                                            <label for="billing-different">
                                                Use a different billing address
                                            </label
                                  >
                                        </div>
                                    </div>
                                    <div id="billing-details" style="
                                  display: none;
                                  margin-top: 15px;
                                  border-top: 1px solid #eee;
                                  padding-top: 15px;
                                ">
                                        <div class="form-group">
                                            <label for="billing-address-details">Billing Address</label>
                                            <textarea id="billing-address-details" name="billing_address_details" rows="3" placeholder="Enter different billing address here..." style="width:100%;resize:vertical;padding-left:12px;"></textarea>
                                        </div>
                                    </div>
                                </section>
                                <section class="form-section remember-me">
                                    <h2>Remember me</h2>
                                    <div class="form-group checkbox-group">
                                        <input type="checkbox" id="remember" name="remember">
                                        <label for="remember">
                                            Save my information for a faster checkout with a Shop
                                  account
                                        </label
                                >
                                        <span class="shop-logo">shop</span>
                                    </div>
                                    <p class="terms-notice">
                                        Your info will be saved to a Shop account. By continuing you
                                agree to Shop's Terms of Service and acknowledge the Privacy
                                Policy.
                                    </p>
                                </section>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary btn-review-order">
                                        Confirm Order
                                    </button>
                                </div>
                            </form>
                        </div>
                    </main>
                </div>
            </div>
            <div class="div2">
                <aside class="order-summary-section">
                    <% if (cart && cart.length) { %>
                        <% let total = 0; %>
                        <% cart.forEach(function(item) { total += item.product.price * item.quantity; }); %>
                        <% cart.forEach(function(item) { %>
                            <div class="order-item">
                                <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="item-image">
                                <div class="item-details">
                                    <p class="item-name"><%= item.product.name %></p>
                                    <p class="item-qty">Qty: <%= item.quantity %></p>
                                </div>
                                <p class="item-price">₹ <%= (item.product.price * item.quantity).toFixed(2) %></p>
                            </div>
                        <% }) %>
                        <div class="discount-section">
                            <div class="form-group">
                                <label for="discount-code" class="sr-only">Discount code or gift card</label>
                                <input type="text" id="discount-code" name="discount_code" placeholder="Discount code or gift card">
                                <button type="button" class="btn btn-apply-discount">Apply</button>
                            </div>
                        </div>
                        <div class="summary-details">
                            <div class="summary-row">
                                <span>Subtotal</span>
                                <span>₹ <%= total.toFixed(2) %></span>
                            </div>
                            <div class="summary-row">
                                <span>Shipping</span>
                                <span class="shipping-cost">Enter shipping address</span>
                            </div>
                            <hr>
                            <div class="summary-row total-row">
                                <span>Total</span>
                                <span class="total-price">₹ <%= total.toFixed(2) %></span>
                            </div>
                            <p class="tax-note">Including taxes (if applicable)</p>
                        </div>
                    <% } else { %>
                        <div class="text-center" style="margin:60px 0;">
                            <div class="empty-cart-img-wrapper">
                                <img src="/resources/addtocart.png" alt="Empty Cart" class="empty-cart-img">
                            </div>
                            <h3>Your cart is empty.</h3>
                            <p>Looks like you haven't added anything to your cart yet.</p>
                            <a href="/shop" class="btn btn-primary">Start Shopping</a>
                        </div>
                    <% } %>
                </aside>
            </div>
        </div>
        
    </body>
